<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="320dp">


        <ImageView
            android:id="@+id/com_img"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:src="@drawable/commodity4" />

        <RelativeLayout
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/com_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/tm"
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:background="@color/red"
                android:gravity="center"
                android:text="天猫"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/com_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/tm"
                android:layout_centerHorizontal="true"
                android:text="男士棉拖鞋男冬季包跟2021新款家用室" />

            <TextView
                android:id="@+id/com_price"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_below="@+id/com_name"
                android:layout_marginLeft="10dp"
                android:text="￥21.12"
                android:textColor="@color/red"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/pay_num"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:layout_below="@+id/com_name"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/com_price"
                android:gravity="center"
                android:text="7000+人付款"
                android:textColor="#cecece"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/manj"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@+id/com_price"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edit_bg"
                android:gravity="center"
                android:text="每200减30"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dpname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/manj"
                android:layout_marginLeft="10dp"
                android:text="FZT旗舰店  > " />
        </RelativeLayout>

</RelativeLayout>